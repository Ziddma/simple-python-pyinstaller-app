node {

    stage('Build') {
        docker.image('python:3.9').inside {
            sh 'python3 -m py_compile /home/simple-python-pyinstaller-app/sources/add2vals.py /home/simple-python-pyinstaller-app/sources/calc.py'
        }
    }

    stage('Test') {
        docker.image('qnib/pytest').inside {
            try {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            } finally {
                junit 'test-reports/results.xml'
            }
        }
    }

    stage('Deploy') {
        docker.image('python:3.9').inside('--network=host -u root') {
            sh 'pip install --no-cache-dir pyinstaller'
            sh 'pyinstaller --onefile sources/add2vals.py'
        }
        archiveArtifacts 'dist/add2vals'
    }

}
