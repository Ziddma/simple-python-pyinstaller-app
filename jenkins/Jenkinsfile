node {
    stage('Build') {
        docker.image('python:2-alpine').inside {
            echo 'Building the application...'
            sh 'ls -lah sources/' 
            sh 'python -m py_compile sources/add2vals.py sources/calc.py'
        }
    }

    stage('Test') {
        docker.image('qnib/pytest').inside {
            echo 'Running tests...'
            sh 'ls -lah sources/'  
            sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
        }
        junit 'test-reports/results.xml' 
    }

    stage('Deliver') {
        echo 'Packaging the application...'

        // Jalankan Docker secara langsung untuk memastikan volume mounting benar
        sh '''
        docker run --rm \
            -v ${WORKSPACE}/sources:/app \
            -w /app \
            cdrx/pyinstaller-linux:python2 \
            pyinstaller --onefile add2vals.py
        '''

        // Pastikan file hasil build tersedia sebelum di-archive
        sh 'ls -lah dist/'

        // Archive hasil build jika berhasil
        archiveArtifacts artifacts: 'dist/add2vals', fingerprint: true
    }
}
