node {
    stage('Build') {
        docker.image('python:2-alpine').pull() // Memastikan image Python tersedia
        docker.image('python:2-alpine').inside {
            echo 'Building the application...'
            sh 'python -m py_compile sources/add2vals.py sources/calc.py'
        }
    }

    stage('Test') {
        docker.image('qnib/pytest').pull() // Memastikan image pytest tersedia
        docker.image('qnib/pytest').inside {
            echo 'Running tests...'
            sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
        }
    }

    stage('Publish Test Results') {
        junit 'test-reports/results.xml'
    }

    stage('Deliver & Archive') {
        docker.image('cdrx/pyinstaller-linux:python2').pull()  // Pastikan image tersedia
        docker.image('cdrx/pyinstaller-linux:python2').inside {
            echo 'Packaging the application...'
            sh 'pyinstaller --onefile sources/add2vals.py'
        }

        archiveArtifacts artifacts: 'dist/add2vals', fingerprint: true
    }
}
