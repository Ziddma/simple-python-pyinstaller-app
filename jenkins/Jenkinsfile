node {
    stage('Build') {
        sh 'docker run --rm -v $(pwd)/sources:/app python:2-alpine python -m py_compile /app/add2vals.py /app/calc.py'
    }

    stage('Test') {
        sh 'docker run --rm -v $(pwd)/sources:/app qnib/pytest py.test --verbose --junit-xml /app/test-reports/results.xml /app/test_calc.py'
    }

    stage('Deliver') {
        sh 'docker run --rm -v $(pwd)/sources:/app -v $(pwd)/dist:/dist cdrx/pyinstaller-linux:python2 pyinstaller --onefile /app/add2vals.py'
    }

    stage('Archive Artifact') {
        archiveArtifacts artifacts: 'dist/add2vals', fingerprint: true
    }
}
